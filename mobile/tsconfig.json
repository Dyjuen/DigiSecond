    "strict": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@shared/*": [
        "../src/lib/*"
      ]
    },
    "baseUrl": "."
  },
  "extends": "expo/tsconfig.base.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
