# ===========================================
# DigiSecond Environment Variables
# Copy this to .env and fill in your values
# ===========================================

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Authentication (NextAuth.js)
NEXTAUTH_SECRET="your-nextauth-secret-at-least-32-chars"
NEXTAUTH_URL="http://localhost:3000"
MOBILE_CALLBACK_URL="http://10.0.2.2:3000"  # For Android emulator development
MOBILE_DEEP_LINK_SCHEME="development"  # 'development' for Expo Go, 'production' for prod builds

# Google OAuth (for social login)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Supabase (Storage & Realtime)
NEXT_PUBLIC_SUPABASE_URL="https://xxxxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ===========================================
# Payment Gateway (Xendit)
# Get keys from: https://dashboard.xendit.co/settings/developers
# ===========================================
XENDIT_SECRET_KEY="xnd_development_your_key"
XENDIT_WEBHOOK_TOKEN="your-xendit-webhook-verification-token"
# XENDIT_PUBLIC_KEY="xnd_public_your_key"  # Optional: for frontend integration

# ===========================================
# Cron Jobs & Scheduled Tasks
# ===========================================
# Secret for authenticating cron job requests (generate random string)
CRON_SECRET="your-random-cron-secret-at-least-32-chars"

# ===========================================
# Rate Limiting (Upstash Redis) - Optional
# If not set, rate limiting uses database
# ===========================================
UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# ===========================================
# Email (MailerSend SMTP) - Optional
# ===========================================
# Format: smtp://user:password@host:port (URL-encode special characters in user/password)
EMAIL_SERVER="smtp://MS_xxxx%40yourdomain.com:your-smtp-token@smtp.mailersend.net:587"
EMAIL_FROM="YourApp <noreply@yourdomain.com>"

# ===========================================
# Email Notifications (Resend) - Optional for MVP
# Get API key from: https://resend.com/api-keys
# ===========================================
RESEND_API_KEY="re_your-resend-api-key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# ===========================================
# Platform Configuration
# ===========================================
# Platform fee percentage (default: 5 = 5%)
PLATFORM_FEE_PERCENTAGE="5"
# Payment timeout in hours (default: 24)
PAYMENT_TIMEOUT_HOURS="24"
# Verification period in hours (default: 24)
VERIFICATION_PERIOD_HOURS="24"
