# ===========================================
# DigiSecond Environment Variables
# Copy this to .env and fill in your values
# ===========================================

# Database (Supabase PostgreSQL)
DATABASE_URL="Hayo apa hayo"

# Authentication (NextAuth.js)
NEXTAUTH_SECRET="your-nextauth-secret-at-least-32-chars"
NEXTAUTH_URL="http://localhost:3000"
MOBILE_CALLBACK_URL="http://10.0.2.2:3000"  # For Android emulator development
MOBILE_DEEP_LINK_SCHEME="development"  # 'development' for Expo Go, 'production' for prod builds

# Google OAuth (for social login)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Supabase (Storage & Realtime)
NEXT_PUBLIC_SUPABASE_URL="https://xxxxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"  

# Xendit (Payment Processing)
XENDIT_SECRET_KEY="xnd_development_your_key"
XENDIT_WEBHOOK_TOKEN="your-xendit-webhook-verification-token"

# Upstash Redis (Rate Limiting & Sessions)
UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Email (MailerSend SMTP)
# Format: smtp://user:password@host:port (URL-encode special characters in user/password)
EMAIL_SERVER="smtp://MS_xxxx%40yourdomain.com:your-smtp-token@smtp.mailersend.net:587"
EMAIL_FROM="YourApp <noreply@yourdomain.com>"
